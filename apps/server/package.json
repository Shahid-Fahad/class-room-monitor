{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js",
    "db:local": "docker compose up -d db",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.3.4",
    "@libsql/client": "^0.14.0",
    "@trpc/client": "^11.0.0",
    "@trpc/server": "^11.0.0",
    "@types/pg": "^8.11.14",
    "better-auth": "^1.2.6",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.42.0",
    "hono": "^4.7.6",
    "pg": "^8.14.1",
    "ulid": "^3.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "drizzle-kit": "^0.31.0",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
